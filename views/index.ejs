<!-- Page Content -->
<div class="w3-padding-large" id="main">

    <!-- Header/Home -->
    <header class="w3-container w3-padding-16 w3-center w3-black" id="home">
        <h1 class="w3-jumbo">Flasher</h1>
        <hr style="width:80%;left: 10%;position: relative;" class="w3-opacity">
    </header>

    <div class="w3-row w3-padding-16 w3-light-grey" style="padding-left: 16px;">
        <!-- Channels Section -->
        <div class="w3-quarter">
            <!-- <span class="w3-xlarge">Channels</span><br> -->
            <%- include('controls/channels', { lastChannel, channels }) %>
        </div>
        <!-- Player Section -->
        <div class="w3-rest" style="padding-left: 16px;padding-right: 16px;">
            <!-- <span class="w3-xlarge">Player</span><br> -->
            <%- include('controls/Player', { lastChannel }) %>
        </div>
    </div>

    <!-- Workspace Section -->
    <div id="workspaceSection" class="w3-justify w3-text-grey w3-padding-16">
        <h3 class="w3-padding-16 w3-text-light-grey">Workspace</h3>

        <%- include('controls/Menu') %>

        <hr style="width:100%" class="w3-opacity">
        <div class="w3-row w3-padding-16">
            <div class="w3-quarter">
                <div id="controlsList"></div>
            </div>
            <div class="w3-rest" style="padding-left: 16px;">
                <div id="workspace"></div>
            </div>
        </div>

    </div>

</div>
<!-- END PAGE CONTENT -->