<div class="addVisualizerMenu w3-container w3-black w3-padding-16">
    <% if (locals.visualizer===null || locals.visualizer===undefined) locals.visualizer='none' %>
    <div class="w3-left"><i class="fa fa-share-alt w3-xxlarge"></i></div>
    <div class="w3-right">
        <div class="w3-button" data-action="close">X</div>
    </div>
    <div class="w3-container" style="height: 400px;">
        <div class="w3-container w3-padding">
            <div class="w3-half w3-padding">
                <div class="w3-text-white">width</div>
            </div>
            <div class="w3-half">
                <input id="width" type="number" class="w3-input" placeholder="width" min="0" max="1920"></input>
            </div>
        </div>
        <div class="w3-container w3-padding">
            <div class="w3-half w3-padding">
                <div class="w3-text-white">height</div>
            </div>
            <div class="w3-half">
                <input id="height" type="number" class="w3-input" placeholder="height" min="0" max="1080"></input>
            </div>
        </div>
        <div class="w3-container w3-padding">
            <div class="w3-half w3-padding">
                <div class="w3-text-white">fftSize</div>
            </div>
            <div class="w3-half">
                <input id="fftSize" type="number" class="w3-input" placeholder="fftSize" min="32" max="32768"></input>
            </div>
        </div>
        <% if (visualizer!=='none') { %>
            <%- await include(`visualizers/menus/${visualizer}`) %>
        <% } %>
        <div class="w3-container w3-padding">
            <div class="w3-button" style="width: 100%;" data-action="add">add</div>
        </div>
    </div>
</div>